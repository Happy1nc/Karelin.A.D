<Page x:Class="StylesAPP.HotelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StylesAPP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HotelPage">

    <StackPanel>
        <Label/>
        <Label Content="Логин" HorizontalAlignment="Center" FontWeight="Bold"/>
        <TextBox x:Name="Loginbox" Width="175" Height="30"/>
        <Label Content="Пароль" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Viewbox Height="60" Margin="312,0" Stretch="Fill">
            <Grid Height="60" Width="180">
                <PasswordBox x:Name="Passwordbox" Width="180" PasswordChar="•" Margin="0,0,0,30.2"/>
                <TextBox x:Name="PasswordUnmask"  Visibility="Hidden" Width="180" Margin="0,0,0,30.2"/>
            </Grid>
        </Viewbox>
        <CheckBox VerticalAlignment="Center" HorizontalAlignment="Center" Content="Показать пароль" Name="ShowPassword" IsChecked="False" Checked="ShowPassword_Checked" Unchecked="ShowPassword_Checked"/>
        <Label/>
        <Label/>
        <Button Content="Войти" Width="175" Height="30" Click="Button_Click"/>
    </StackPanel>
</Page>
